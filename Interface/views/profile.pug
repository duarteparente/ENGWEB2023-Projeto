doctype html
html
    head
        title AcordWEB
        meta(charset="utf-8")
        link(rel='stylesheet', href='/stylesheets/profile.css')
        link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
        link(rel="stylesheet" href="/stylesheets/navbar.css")
        link(rel="stylesheet" href="/stylesheets/footer.css")
    body

        script. 
            function dropDownToggle() {
                var toggle = document.querySelector('.dropdown');
                toggle.classList.toggle('active');
            }

        .container

            include navbar.pug
            
            .content         
            
                .box
                    .left
                        .prof
                            img.pr(src="/images/justice.jpeg")
                            h3 #{profile.username}

                            .loc 
                                img(src="/images/loc.png")
                                h4 #{profile.localidade}
                        .confs
                            .opts
                                img(src="/images/configs.png")
                                h4 Opções de Configuração
                            .btns 
                                button.alt
                                    a(href="/alterarPassword") Alterar Password
                                button.el 
                                    a(href="/eliminarConta") Eliminar Conta

                    .right
                        .nameline 
                            h1 #{profile.name}
                            button.ed 
                                a(href="/eliminarConta") Editar Perfil
                        .info  
                            if profile.active
                                .status
                                    p Status: &nbsp
                                        h3.on ONLINE
                                .access
                                    p Último Acesso: &nbsp
                                        h3 Now
                            else
                                .status
                                    p Status: &nbsp
                                        h3.off OFFLINE
                                .access
                                    p Último Acesso: &nbsp
                                        h3 #{profile.lastAccess}
                            
                            .info-content
                            .rectangle
                                h2.inf Informações Gerais
                            .line-in 
                            .line-aft

                            .pfs
                                p Profissão: &nbsp
                                    h4 #{profile.profissao}
                            
                            .idd
                                p Idade: &nbsp
                                    h4 #{profile.idade}

                            .em
                                p Email: &nbsp
                                    h4 #{profile.email}

                            .nvl
                                p Nível: &nbsp
                                    h4 #{profile.level}


                        

            include footer.pug