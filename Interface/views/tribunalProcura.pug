extends layout

block content
  script.
    function handleButtonClick() {
      var inputValue1 = document.getElementById('search-input1').value;
      var inputValue2 = document.getElementById('search-input2').value;
      var inputValue3 = document.getElementById('search-input3').value.replaceAll("/","%2F");
      window.location.href = '/tribunal?tribunal=' + inputValue1 + '&Descritor=' + inputValue2 + '&DataAcordao=' + inputValue3;
    }
  nav.navbar
    .logo #[strong Bases Jurídicas]
