        li: a(href="/") Login
        li: a(href="/") Registar

  .content 
    .w3-card-4.trib
      header.w3-container
        h1 #{ft}
        .menu
          li: a(href="/") Voltar
      .search.trib
        li: input(id="search-input1" type="text" value="" + t readonly)
        li: input(id="search-input2" type="text" placeholder="Descritor")
        li: input(id="search-input3" type="text" placeholder="Data do Acórdão [mm/dd/aaaa]")
        li: button(type="submit" onclick="handleButtonClick()") Procurar

